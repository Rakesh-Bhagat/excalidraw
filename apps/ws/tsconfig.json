{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "target": "ES2017",
    "lib": ["ES2017", "ES2015"],
    "outDir": "./dist",
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}